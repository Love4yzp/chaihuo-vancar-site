    <article class="min-h-screen pb-24">
        {/* Hero Image */}
        {
            frontmatter.image && (
                <div class="w-full h-[40vh] relative">
                    <img
                        src={frontmatter.image}
                        alt={frontmatter.title}
                        class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-base-100 to-transparent opacity-80" />
