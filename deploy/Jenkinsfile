pipeline {
    agent any

    parameters {
        string(
            name: 'DEPLOY_PATH',
            defaultValue: '/opt/chaihuo-mcv',
            description: 'Deployment directory path on VPS'
        )
    }

    stages {
        stage('Pull Image') {
            steps {
                dir("${params.DEPLOY_PATH}") {
                    sh 'docker-compose pull'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir("${params.DEPLOY_PATH}") {
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Cleanup') {
            steps {
                dir("${params.DEPLOY_PATH}") {
                    sh 'docker image prune -f'
                }
            }
        }
    }

    post {
        success {
            echo '✓ Deployment completed successfully!'
            // Optional: Add notification (email, Slack, etc.)
            // emailext(
            //     subject: 'Chaihuo MCV Deployment Successful',
            //     body: 'The deployment to ${DEPLOY_PATH} completed successfully.',
            //     to: '${BUILD_USER_EMAIL}'
            // )
        }
        failure {
            echo '✗ Deployment failed!'
            // Optional: Add failure notification
            // emailext(
            //     subject: 'Chaihuo MCV Deployment Failed',
            //     body: 'The deployment to ${DEPLOY_PATH} failed. Check logs for details.',
            //     to: '${BUILD_USER_EMAIL}'
            // )
        }
    }
}
