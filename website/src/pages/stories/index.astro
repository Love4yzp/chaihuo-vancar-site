import MainLayout from "../../layouts/MainLayout.astro";

// Get all markdown files in this directory using the modern Vite import.meta.glob
const storiesRaw = import.meta.glob("./*.md", { eager: true });
const stories = Object.values(storiesRaw) as any[];

// Filter out index.astro and sort by date
const sortedStories = stories
    .filter((story) => story.url !== "/stories/")
    .sort((a, b) => {
        const dateA = new Date(a.frontmatter.date || 0).valueOf();
        const dateB = new Date(b.frontmatter.date || 0).valueOf();
        return dateB - dateA;
    });

// Extract first 6 image URLs for preloading
const preloadImages = sortedStories
    .slice(0, 6)
    .map((s) => s.frontmatter.image)
    .filter(Boolean);
